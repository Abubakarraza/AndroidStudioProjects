<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:layout_margin="12dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="B"
            android:fontFamily="@font/bold"
            android:textColor="@color/teal_700"
            android:textSize="60dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BREVIA"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:textColor="@color/black">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Become a customer"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:layout_gravity="center">

        </TextView>
<View
    android:layout_width="90dp"
    android:layout_height="6dp"
    android:background="@color/teal_700"
    android:layout_gravity="center"
    android:layout_margin="8dp">

</View>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select a Language"
    android:textSize="17dp"
    android:layout_gravity="center"
    android:textStyle="bold">

</TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:padding="3dp"
            android:textColor="@color/teal_700"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/border">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"

                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/teal_700"
            android:layout_weight="1">

        </View>
        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
          android:background="#A4000000"
            android:layout_weight="1">

        </View>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="15dp"

            android:layout_marginTop="15dp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLength="15"
            android:maxLines="1"
            android:drawablePadding="2dp"
            android:background="@drawable/border2"
            android:hint="Enter Here"
            android:drawableStart="@drawable/person"
            android:drawableTint="#4CAF50"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="15dp"

            android:layout_marginTop="8dp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLength="15"
            android:maxLines="1"
            android:inputType="text"
            android:drawablePadding="2dp"
            android:background="@drawable/border2"
            android:hint="Enter Here"
            android:drawableStart="@drawable/person"
            android:drawableTint="#4CAF50"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="15dp"

            android:layout_marginTop="8dp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLength="15"
            android:maxLines="1"
            android:inputType="text"
            android:drawablePadding="4dp"
            android:background="@drawable/border2"

            android:hint="Enter e-mail Here"
            android:drawableStart="@drawable/email"
            android:drawableTint="#4CAF50"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Number"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="15dp"

            android:layout_marginTop="8dp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLength="15"
            android:maxLines="1"
            android:inputType="number"
            android:background="@drawable/border2"
            android:hint="Enter number Here"
            android:drawableStart="@drawable/phone"
            android:drawableTint="#4CAF50"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="15dp"

            android:layout_marginTop="8dp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLength="15"
            android:maxLines="1"
            android:inputType="textPassword"

            android:background="@drawable/border2"
            android:hint="Enter Password here"
            android:drawableStart="@drawable/key"
            android:drawableEnd="@drawable/eye"
            android:drawableTint="#4CAF50"
            android:drawablePadding="2dp"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="15dp"

            android:layout_marginTop="8dp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLength="15"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/border2"
            android:hint="Enter Here"
            android:drawableStart="@drawable/key"
            android:drawableEnd="@drawable/eye"
            android:drawableTint="#4CAF50"
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="15dp"

            android:layout_marginTop="8dp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLength="15"
            android:maxLines="1"
            android:drawablePadding="2dp"
            android:background="@drawable/border2"
            android:hint="Enter Date Here"
            android:inputType="datetime"
            android:drawableStart="@drawable/calender"
            android:drawableTint="#4CAF50"
            >

        </EditText>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:background="@drawable/button"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:id="@+id/btn2">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</ScrollView>

</LinearLayout>