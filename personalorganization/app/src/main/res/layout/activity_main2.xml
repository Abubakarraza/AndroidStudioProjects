<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical"
    android:background="#611C17">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:src="@drawable/logo2"
   android:layout_gravity="bottom"
        android:layout_margin="12dp"
 >

    </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humantarian syndicates  "
            android:textSize="30dp"
            android:fontFamily="@font/gbold"

            android:textStyle="bold">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pakistan  "
            android:textColor="#EB171717"
            android:gravity="right"
            android:layout_marginRight="30dp"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/earth"

        android:layout_gravity="bottom"

        >

    </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maham Imran  "
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foundation  "
android:textColor="#EBF44336"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be Lung Aware"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/white"

        android:layout_gravity="center">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are Showing any of these common symptoms of suspected lungs cancer"
android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="40dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/sym1"> </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Appetite Loss"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="5dp">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sym3"> </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Fotigue"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="5dp">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sym6"> </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Loss"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="5dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/sym2"
                > </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="A persistent cough or a change in a long standing cough."

            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="5dp">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sym5"> </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Breathless or shorness of breath "
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="5dp">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sym4"> </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coughing up blood phelgm"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="5dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            android:layout_gravity="top"
            >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/sym8"> </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Aches or pains when brathing or coughing "
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:layout_margin="5dp">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            android:layout_gravity="top"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sym7"> </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Presistent chest infection that not respond to medical treatment"
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:layout_margin="5dp">

        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/sym9">

        </ImageView>


    </LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/desk"
        android:scaleType="centerCrop"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/black">
        
    </com.mikhaellopez.circularimageview.CircularImageView>
</LinearLayout>