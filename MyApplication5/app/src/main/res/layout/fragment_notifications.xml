<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/card_border"
            android:backgroundTint="#CB9C27B0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"

                android:drawableEnd="@drawable/ic_baseline_menu_24"
                android:drawableTint="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:text="Notification"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:drawableRight="@drawable/ic_baseline_menu_24">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.63"


                android:drawableStart="@drawable/ic_update"
                android:drawableLeft="@drawable/ic_update">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_weight="0.23"
                android:text="update"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.63"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"

                android:drawableTint="@color/black"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24">

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:background="@color/black">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.63"


                android:drawableStart="@drawable/ic_warning_17"
                android:drawableLeft="@drawable/ic_warning_17">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_weight="0.23"
                android:text="Warning"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.63"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:id="@+id/txt1"
                android:drawableTint="@color/black"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24">

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:background="@color/black">

        </View>

        <TextView
            android:id="@+id/text_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
    </ScrollView>

</LinearLayout>