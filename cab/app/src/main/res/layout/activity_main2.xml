<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/img6">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUICKIE"
                android:textColor="#29388F"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="center">

            </TextView>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Name"
           android:textSize="20dp"
           android:textColor="#29388F"
           android:layout_marginLeft="12dp"
           >

       </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"

                android:maxLines="1"
                android:maxLength="12"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawableTint="#29388F"
                android:hint="Enter Name"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="7dp"
              android:background="@drawable/border">

            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20dp"
                android:textColor="#29388F"
                android:layout_marginLeft="12dp"
                >

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter Email "
                android:maxLines="1"
                android:maxLength="15"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawableTint="#29388F"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="7dp"
                android:background="@drawable/border">

            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone No"
                android:textSize="20dp"
                android:textColor="#29388F"
                android:layout_marginLeft="12dp"
                >

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter Number "
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="11"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:drawableTint="#29388F"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="7dp"
                android:background="@drawable/border">

            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:inputType="numberPassword|textPassword"
                android:textSize="20dp"
                android:textColor="#29388F"
                android:layout_marginLeft="12dp"
                >

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Password"
                android:maxLines="1"
                android:maxLength="12"
android:drawableStart="@drawable/ic_baseline_key_24"
                android:inputType="numberPassword"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:drawableTint="#29388F"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="7dp"
                android:background="@drawable/border">

            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="20dp"
                android:textColor="#29388F"
                android:layout_marginLeft="12dp"
                >

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLines="1"
                android:maxLength="12"
                android:hint="Enter Location"
                android:inputType="textPostalAddress"
                android:drawableStart="@drawable/ic_baseline_add_location_24"
                android:drawableTint="#29388F"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="7dp"
                android:background="@drawable/border">

            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign In"
                android:id="@+id/btn5"
                android:textSize="18dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#29388F"
                android:background="@drawable/button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="false"
                tools:ignore="InvalidId">

            </androidx.appcompat.widget.AppCompatButton>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="100dp"
                    android:layout_height="4dp"
                    android:background="#29388F"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0.45"

                    >

                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textColor="#29388F"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="0.1">

                </TextView>
                <View
                    android:layout_width="100dp"
                    android:layout_height="4dp"
                    android:background="#29388F"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0.45"
                    android:layout_marginRight="20dp"
                    >

                </View>

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in with Facebook"
        android:gravity="center"
        android:textColor="#29388F"
        android:textSize="18dp"

        android:drawableStart="@drawable/ic_facebook_f_logo_blue_logo_wine">

    </TextView>
</LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>